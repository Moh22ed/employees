<% include parts/header %>

<nav class="navbar navbar-expand-lg bg-dark navbar-dark">
	<div class="container">
	<p class=" text-center text-light display-4 my-3">Express Project</p>
	</div>
</nav>
<br>

<div class="row justify-content-center">
	<div class="col-lg-4">
		<div class="card text-light text-center bg-dark">
			<div class="card-body">
				<% if(errors) {%> 
				<ul class="lead">
                    <% errors.forEach(function(error){%>
                        	<li><%= error.msg %></li>
                    <%})%>
                        </ul>
                 
				<%}%>
				<p class="lead"> Fill Out Form If You Are A New Employee</p>
				<form method="POST" action="/employees/add">
					<div class="form-group">
						<input type="number" name="employee_id" placeholder="ID Number" class="form-control">
					</div>
					<div class="form-group">
						<input type="name" name="fullName" placeholder="Employee Name" class="form-control">
					</div>
					<div class="form-group">
						<input type="text" name="department" placeholder="Department" class="form-control">
					</div>
					<div class="form-group">
						<input type="text" name="position" placeholder="Position" class="form-control">
					</div>
					<input type="submit" class="btn btn-outline-light btn-block">
				</form>
			</div>
		</div>
	</div>
</div>
<br>

<div class="row justify-content-center">
	<div class="col-lg-8">
		<table class="table text-center">
			<thead class="bg-dark text-light lead">
				<tr>
					<th>ID Number</th>
					<th>Employee Name</th>
					<th>Department</th>
					<th>Position</th>
                    <th>Eliminate</th>
				</tr>
			</thead>
			<% employees.forEach(function(employee){%> 
			<tbody>
				<tr>
					<td><%= employee.employee_id %></td>
					<td><%= employee.fullName %></td>
					<td><%= employee.department %></td>
					<td><%= employee.position %></td>
					<td><a href="#" class="deleteEmployee btn btn-outline-danger" data-id="<%= employee._id %>">Delete</a></td>
				</tr>
			</tbody>
			<%})%>
		</table>

		</div>
	</div>
















<% include parts/footer %>



